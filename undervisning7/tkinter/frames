from tkinter import *

# Tk()
window = Tk()

tpFrame = Frame(window)

tpFrame.pack()

btFrame = Frame(window)

btFrame.pack(side=BOTTOM)

btn1 = Button(tpFrame, text="klik her!", fg="Blue")
btn1.pack(side=LEFT)
btn2 = Button(tpFrame, text="Heeeellllooooo!", fg="Red")
btn2.pack(side=LEFT)

btn3 = Button(btFrame, text="Heeeellllooooo!", fg="Purple")
btn3.pack(side = LEFT)

btn4 = Button(btFrame, text="Heeeellllooooo!", fg="yellow")
btn4.pack(side = LEFT)

# Mainloop af vindue
window.mainloop()
